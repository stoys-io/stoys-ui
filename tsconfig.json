{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "es2019", "dom", "dom.iterable"],
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationDir": "dist",
    "types": ["node", "jest"],
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/*.mock.ts"]
}
